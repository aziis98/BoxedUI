<Window title="BoxWindow Test" width="1000" height="600">

    <Box left="0" right="0" top="0" height="30" z-index="1">
        <Feature type="render" by="menu"/>
        <!--
        <Feature type="layout-stack"
                 direction="horizontal"
                 gap="5"
                 left="10" right="5" bottom="3"/>
                 -->
        <Feature type="layout-flow"
                 direction="horizontal"
                 gap="5"/>

        <Box height="27" top="0" onClick="menu-file">
            <Feature type="render" by="menu-label" color="0x666666" text="File"/>
            <Feature type="render" by="border" color="0x00FF00"/>
        </Box>
        <Box height="27" top="0" onClick="menu-edit">
            <Feature type="render" by="menu-label" color="0x666666" text="Edit"/>
            <Feature type="render" by="border" color="0x00FFFF"/>
        </Box>
        <Box height="27" top="0" onClick="menu-file">
            <Feature type="render" by="menu-label" color="0x666666" text="View"/>
            <Feature type="render" by="border" color="0xFF0000"/>
        </Box>
        <Box height="27" top="0" onClick="menu-file">
            <Feature type="render" by="menu-label" color="0x666666" text="Help"/>
            <Feature type="render" by="border" color="0x0000FF"/>
        </Box>
    </Box>

</Window>